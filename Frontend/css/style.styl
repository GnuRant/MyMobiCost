@import '../bootstrap/css/bootstrap.css'
@import 'flat-ui.css'

// vendor prefixes
@import 'nib/index'

//varie ed eventuali
@import "colors"
@import "animations"

//cose overridate da flatui in maniera definitiva
@import "flat-ui-overrides"

//content pusher
#content-pusher
  position fixed
  height 100%
  width 100%

.pusher-open
  margin-left 500px
  display: block;
  -webkit-transition: all 600ms cubic-bezier(0.77, 0, 0.175, 1);
  transition:         all 600ms cubic-bezier(0.77, 0, 0.175, 1);

.overlay
  display hidden
  background #000
  position absolute
  width 100%
  height 100%
  z-index 256
  opacity 0
  transition .6s

//sidebar
#left-sidebar
  position absolute
  height 100%
  width 100px
  background black
  z-index 255

  .logo-deactive
    background none !important

  #logo
    background light-black
    padding-top .1em

    #moreco-logo 
      width 80%
      display block
      margin .5em auto 0 auto
    #moreco-caption
      color white
      text-align center
      margin-top 0
      margin-bottom 0

  .new-session-active
    background light-black
    transition .3s
    p
      transform rotate(90deg)

    &:after
      transition .3s
      height 0
      width 0
      content " "
      position absolute
      bottom -10px
      left 39px
      border-left: 10px solid transparent;
      border-right: 10px solid transparent;
      border-top: 10px solid light-black;

  #new-session
    transition .3s
    padding .5em
    line-height 65px
    height 83px
    position relative
    margin-bottom 20px

    &:hover
      background light-black
      transition .3s

      &:after
        transition .3s
        height 0
        width 0
        content " "
        position absolute
        bottom -10px
        left 39px
        border-left: 10px solid transparent;
        border-right: 10px solid transparent;
        border-top: 10px solid light-black;

      p
        //balla
        animation: shake .3s ease 1;

    p
      transition .3s
      cursor pointer
      font-size 7em
      color white
      font-weight 300
      line-height 65px
      text-align center
      margin 0

  .active
    background light-black
    transition .3s
    border-left 5px green solid

  .categoria
    transition .3s
    cursor pointer
    display none

    #menu-famiglia, #menu-abitazione, #menu-trasporti, #menu-spostamenti
      height 60px
      display block
      margin 0 auto
      padding .6em
      transition .3s

    &:hover
      background light-black
      transition .3s

//tasto avanti
#abitazione-avanti, #famiglia-avanti, #trasporti-avanti, #spostamenti-avanti
  padding .5em 0
  position fixed
  bottom 0px
  text-align center
  width 499px
  background light-grey
  border-top bordino 1px solid

//titolo fermo
#trasporti-form, #abitazione-form, #famiglia-form, #spostamenti-form
  // transition 1s ease-in-out;
  padding-top 50px
  h1
    position fixed
    top 0
    width 499px
    z-index 1

#famiglia-form
  z-index 5
#abitazione-form
  z-index 4
#trasporti-form
  z-index 3
#spostamenti-form
  z-index 2
  

//barra sponsor
#sponsor-sidebar
  position absolute
  right 0
  height 100%
  background light-grey
  padding-top .5em
  z-index 255
  width 100px

  img
    padding 1em 0 0
    width 90%
    display block
    margin 0 auto

// welcome screen
#welcome
  z-index 256
  larg = 500px

  position absolute
  top 20%
  width larg
  left calc(50% \- 250px)
  h1
    background black
    color white
    font-weight bold
    margin 0
    text-align center
    font-size 40px
    border-radius 5px 5px 0 0 
    padding .2em 0
    img
      height 40px
      position absolute
      left 10px
  p
    background green
    color white
    padding 1em 4em
    text-align center
    line-height 1.2em
    border-radius 0 0 5px 5px
    button
      text-align center
      display block
      margin 1em auto 0

//form
#form-container
  margin-left -500px
  transition .5s

.form-container-open
  display block
  margin-left 0 !important
  -webkit-transition: all 600ms cubic-bezier(0.175, 0.885, 0.32, 1.275);
  transition:         all 600ms cubic-bezier(0.175, 0.885, 0.32, 1.275);

.form-horizontal .control-label
  text-align: left;
  padding-top 0

.tagsinput-add, .tagsinput-remove
  background none
  border: 2px blue solid;
  border-radius: 3px;
  color: blue;
  cursor: pointer;
  display: inline-block;
  font-size: 14px;
  line-height: 1;
  margin-top 1px
  margin-bottom 1px
  padding: 7px 9px;
  vertical-align: top;
  -webkit-transition: 0.25s linear;
  transition: 0.25s linear;
  &:hover
    opacity .5
    background none
  &:active
    transition .1s ease
    opacity 1

.tagsinput-add
  margin-left 10px

.tagsinput-remove:before
  content "\e600"
  font-family "Flat-UI-Icons"

.form
  position absolute
  width 500px
  background light-grey
  border-right 1px bordino solid
  margin-left 100px
  height 100%
  overflow scroll
  
  h1
    background green
    color white
    margin 0
    font-size 35px
    padding 10px 36px
    font-weight regular

  .form-campi
    padding 36px 36px 80px

    label
      font-size 16px
      font-weight bold

// ## FAMIGLIA ##
// #famiglia-form
//   display none

#famiglia-caller .form-group .col-sm-6 .form-control-feedback
  right 112px

.famiglia-input
  width 100px
  display block
  float left

// ## ABITAZIONE ##

#costo-conosciuto
  display none

// ## Trasporti & Spostamenti ##

#titolo-auto, #titolo-mezzi, #titolo-spostamento
  font-size 1.6em
  margin .4em 0
  .tagsinput-add
    color green
    border-color green
    font-size .3em

#aggiungi-auto, #aggiungi-abbonamento, #aggiungi-spostamento
  display none

.conferma-trasporti
  margin-top 20px
  margin-bottom 50px
  div 
    display inline-block

.tabella-auto, .tabella-mezzo
  position relative
  margin-right 15px
  margin-left 15px
  margin-bottom 20px
  margin-top 10px
  padding-left 60px
  padding-bottom 5px
  border-bottom 2px bordino solid
  p
    margin-bottom 0

.tabella-attivita
  position relative
  margin-right 15px
  margin-left 15px
  margin-bottom 20px
  margin-top 10px
  padding-bottom 5px
  border-bottom 2px bordino solid
  p
    margin-bottom 0
  

.nome-auto, .nome-mezzo, .nome-attivita
  font-size 1.1em
  margin 0
  position relative
  
.icon-auto, .icon-mezzo
  border-radius 50%
  height 45px
  width 45px
  position absolute
  left 0px
  
.modifica-auto, .modifica-mezzo, .modifica-attivita
  position absolute
  right 15px
  line-height 52px
  top 0px
  .fui-cross
    color red
  span
    padding-left 10px
    &:hover
      opacity .6

.icon-auto
  content url('../img/tabella_auto.svg')

.icon-mezzo
  content url('../img/tabella_bus.svg')


// ## Risultato ##
left-tile = 0.8em

#container-risultato
  position absolute
  left 100px
  top 1em
  overflow-x scroll
  overflow-y hidden
  white-space nowrap
  margin-right 130px
  width calc(100% \- 221px)
  z-index -1

.tile-risultato
  background light-grey
  width 450px
  border-radius 10px
  display inline-block
  margin-left 1em
  &:last-child
    margin-right 1em

.titolo-tile, #confronto-title
  margin-bottom 0
  margin-top 0
  padding .3em left-tile
  background green
  color white
  font-size 1em
  border-radius 10px 10px 0 0
  position relative
  .edit-tile
    position absolute
    right left-tile
    font-weight 300
    span
      margin-left .5em
      &:hover
        opacity .8
      &:active
        opacity 1

.categorie-residenza, .categorie-spostamenti, .categorie-auto, .categorie-mezzi
  padding 0 left-tile
  margin-top .8em
  
  .costo-sezione
    font-weight bold
    font-size 2em
    margin 0
    line-height 1.4em

  .costo-auto-dettaglio
    font-size 14px
    font-weight 300
    line-height 1em
    margin-top 0
    margin-bottom 1.5em

  .titolo-spostamenti, .titolo-residenza, .titolo-auto, .titolo-mezzi
    font-size 1.1em
    font-weight 300
    margin 0
    line-height .5em
    position relative
    margin-left 1.1em
    &::before
      height 1em
      width 1em
      border-radius 50%
      position absolute
      left -1.1em
      top -.3em
      content " "

.titolo-residenza::before, #confronto-residenza::before
  background darkblue

.titolo-auto::before, #confronto-auto::before
  background purple

.titolo-mezzi::before, #confronto-trasporti::before
  background green-graph

.risultato-sum-up
  background black
  color white
  border-radius 0 0 10px 10px
  padding 0 left-tile
  p
    text-align center
    margin 0

.categorie-container
  float left
  width 200px
  margin .8em 0
  border-right 2px solid bordino

.risultato-graph
  padding .5em
  float left
  width 250px
  text-align center
  p
    margin-bottom 0

#costo-annuale
  font-size 1.5em
  line-height 1em
  padding .4em 0 .1em

.green
  color green


// ## confronto ##

#container-confronto
  position absolute
  width 80%
  bottom 0
  left 120px
  right 120px
  height 220px
  margin-bottom 0

#confronto-content
  background light-grey
  height 190px

#confronto-legenda
  padding-top 1em

#confronto-residenza, #confronto-auto, #confronto-trasporti
    list-style-type none
    font-weight 300
    margin 0
    position relative
    margin-left 1.1em
    &::before
      height 1em
      width 1em
      border-radius 50%
      position absolute
      left -1.1em
      top .3em
      content " "

#confronto-legenda
  position relative
  height 100%
  position relative
  float left
  margin-bottom 0

#confronto-grafici-container
  float left
  position relative
  margin-left 2em
  margin-top 1em
  height 60%
  border-bottom 1px solid bordino

.confronto-grafico
  height 100%
  margin 0 2em
  // background red
  width 100px
  content " "
  float left
  position relative
  bottom 0
  .residenza-grafico
    background darkblue
    height 20%
    width 100px
    content " "
  .auto-grafico
    background purple
    height 60%
    width 100px
    content " "
  .trasporti-grafico
    background green-graph
    height 20%
    width 100px
    content " "

#confronto-grafici-testo
  position absolute
  bottom 0px
  left 225px

.confronto-didascalia
  float left
  position relative
  text-align center
  width 100px
  margin 0 36px
  font-size .8em
  line-height 1em