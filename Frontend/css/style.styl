// vendor prefixes
@import 'nib/index'

//varie ed eventuali
@import "colors"
@import "animations"


#left-sidebar
  position fixed
  height 100%
  width 100px
  background black

  #logo
    background light-black
    padding-top .1em

    #moreco-logo 
      width 80%
      display block
      margin .5em auto 0 auto
    #moreco-caption
      color white
      text-align center
      margin-top 0
      margin-bottom 0

  #new-session
    transition .3s
    padding .5em
    line-height 65px
    height 83px

    &:hover
      background light-black
      transition .3s
      p
        animation: shake .3s ease 1;

    p
      cursor pointer
      font-size 7em
      color white
      font-weight 300
      line-height 65px
      text-align center
      margin 0

  .categoria
    transition .3s

    #famiglia, #abitazione, #trasporti, #spostamenti
      height 60px
      display block
      margin 0 auto
      padding .6em
      transition .3s
    &:hover
      background light-black
      transition .3s

#sponsor-sidebar
  position absolute
  right 0
  height 100%
  background light-grey
  padding-top .5em

  img
    padding 1em 0 0
    width 90%
    display block
    margin 0 auto

// welcome screen
#welcome
  larg = 500px

  display none
  position absolute
  top 20%
  width larg
  left calc(50% \- 250px)
  h1
    background black
    color white
    font-weight bold
    margin 0
    text-align center
    font-size 40px
    border-radius 5px 5px 0 0 
    padding .2em 0
    img
      height 40px
      position absolute
      left 10px
  p
    background green
    color white
    padding 1em 4em
    text-align center
    line-height 1.2em
    border-radius 0 0 5px 5px
    button
      text-align center
      display block
      margin 1em auto 0